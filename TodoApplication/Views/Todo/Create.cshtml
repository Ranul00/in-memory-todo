@model TodoItem

<h2>@(Model.Id == 0 ? "Add Task" : "Edit Task")</h2>

<form method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" asp-for="Title" required />
    </div>
    <div class="form-group">
        <label>
            <input type="checkbox" asp-for="IsCompleted" /> Completed
        </label>
    </div>
    @if (Model.Id != 0)
    {
        <div class="form-group">
            <label>Created Date</label>
            <input type="text" class="form-control" value="@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")" readonly />
        </div>
    }
    <button type="submit" class="btn btn-success">Save</button>
</form>